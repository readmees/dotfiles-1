# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.hostname = "vm"

  config.vm.provider "virtualbox" do |vb|
    vb.customize ["setproperty", "machinefolder", ENV["HOME"] + "/Documents/vm/"]
    vb.name = "vm"
    vb.gui = false
    vb.memory = "4096"
  end

  config.vm.provision "shell", inline: <<-SHELL
    apt update
    apt install -y curl
    apt install -y git
  SHELL
end
