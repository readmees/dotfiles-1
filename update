#!/usr/bin/env bash

# BREW (CASK)
echo "updating and upgrading Brew..."
brew update
brew upgrade

# RUBY
echo "updating and upgrading Ruby..."
brew upgrade ruby
sudo gem update

# NPM
echo "updating and upgrading NPM..."
sudo npm install npm -g
sudo npm update -g

# PIP
echo "updating and upgrading PIP..."
pip freeze > requirements.txt
pip install -r requirements.txt --upgrade
rm requirements.txt

# ATOM
echo "updating Atom packages..."
apm update

# APP STORE
echo "App Store software updates..."
sudo softwareupdate -i -a
