#!/usr/bin/env bash

### NOTE TO SELF: ONLY EDIT FROM ~/ ###

# Some colors to use for prompt
reset=$(tput sgr0)
bold=$(tput bold)
cyan=$(tput setaf 6)
magenta=$(tput setaf 5)
grey=$(tput setaf 250)
blue=$(tput setaf 4)
white=$(tput setaf 7)
orange=$(tput setaf 166)

# If current working directory is a git folder, prompt [git] in orange
prompt_git() {
	if [ $(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}") == '0' ]; then
		echo -e "$orange[git]"
	else
		return
	fi
}

# build prompt
PS1="\[$reset\]"
if [ -n "$SSH_CLIENT" ]; then PS1+="\[\u@\h: "
PS1+="\[$blue\]\W " # short working directory in default blue
PS1+="\[$reset\]"
PS1+="\$(prompt_git)"
PS1+="\[$grey\] â–² " # $ prompt in grey
PS1+="\[$reset\] "
export PS1
