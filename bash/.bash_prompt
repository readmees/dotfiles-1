#!/usr/bin/env bash

# Some colors to use for prompt
reset=$(tput sgr0);
bold=$(tput bold);
cyan=$(tput setaf 6);
magenta=$(tput setaf 5);
white=$(tput setaf 7);
orange=$(tput setaf 166);

# If current working directory is a git folder, prompt [git] in orange
prompt_git() {
	if [ $(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}") == '0' ]; then
		echo -e "$orange[git]"
	else
		return;
	fi
}

# build prompt
PS1="\[$reset\]";
PS1+="\[$cyan\] \W "; # short working directory in cyan
PS1+="\[$reset\]";
PS1+="\$(prompt_git)";
PS1+="\[$magenta\] Σ "; # $ prompt in magenta
PS1+="\[$reset\] ";
export PS1;
# prompt now looks like ' ~ Σ ' in home directory.
