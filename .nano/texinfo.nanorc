## Here is an example for Texinfo files.

syntax texinfo "\.texi$"
header "^\\input texinfo"
magic "Texinfo source"
comment "@c "

# Command arguments, trailing and enclosed.
color cyan "^@[a-z]+[[:space:]]+.*$"
color magenta "@[a-zA-Z]+\{[^}]*\}"
# Commands themselves.
color yellow "@[a-zA-Z]+\{?" "\}"

# Menu items.
color red "^\*[[:space:]]+.*::.*$"

# Comments.
color green "@c[[:space:]]+.*$"

# Trailing whitespace.
color ,green "[[:space:]]+$"
